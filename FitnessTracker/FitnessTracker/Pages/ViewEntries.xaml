<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:FitnessTracker.ViewModels"
             x:Class="FitnessTracker.Pages.ViewEntries">
    <ContentPage.BindingContext>
        <vm:MainVm/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="View Bodyweight" Command="{Binding NavigationCommand}" CommandParameter="ViewBodyWeight"/>
            <Button Text="View Bodyweight Chart" Command="{Binding NavigationCommand}" CommandParameter="ViewBodyWeightChart"/>
            <Button Text="View Jogging" Command="{Binding NavigationCommand}" CommandParameter="ViewJogging"/>
            <Button Text="Back" Command="{Binding NavigationCommand}" CommandParameter="Back"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>