<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTracker.Pages.NewEntryBodyWeight"
             xmlns:vm="clr-namespace:FitnessTracker.ViewModels">
    <ContentPage.BindingContext>
        <vm:MainVm/>
    </ContentPage.BindingContext>
        <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Entry Text="{Binding TodayDate}" WidthRequest="130" />
            <Entry Placeholder="Weight" Text="{Binding Weight}"/>
            <Entry Placeholder="Bodyfat" Text="{Binding BodyFat}"/>
            <Button Text="Save" Command="{Binding SaveCommand}"/>
            <Button Text="Back" Command="{Binding BackCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>